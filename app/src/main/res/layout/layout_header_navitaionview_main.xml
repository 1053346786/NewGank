<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@color/colorPrimary"
    android:gravity="start|bottom"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/imgv_header_drawer_navigationview_main"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_centerVertical="true"
      android:layout_margin="10dp"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_github_200"
      />

  <TextView
      android:id="@+id/tv_username_heaer_drawer_navigationview_main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="40dp"
      android:layout_toEndOf="@id/imgv_header_drawer_navigationview_main"
      android:hint="用户名"
      android:textSize="20sp"
      />

</RelativeLayout>