<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_main_activity"
    android:background="#f5f5f5"
    >
  <ImageView
      android:id="@+id/imgv_load_error_main_activity"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_centerInParent="true"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_error_128"
      />
  <TextView
      android:id="@+id/tv_load_error_main_activity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgv_load_error_main_activity"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:text="@string/load_net_resourece_failed_please_try_again"
      />
  <ProgressBar
      android:id="@+id/progressbar_load_error_main_activity"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_centerInParent="true"
      android:visibility="gone"
      />

</RelativeLayout>