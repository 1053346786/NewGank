<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_fragment_login_github"
    >

  <TextView
      android:id="@+id/tv_header_login_github_dialog"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_alignParentTop="true"
      android:background="@drawable/header_dialog_fragment"
      android:drawablePadding="10dp"
      android:gravity="center_vertical"
      android:paddingStart="60dp"
      android:text="登录"
      android:textColor="@color/white"
      android:textSize="30sp"
      />

  <ImageView
      android:id="@+id/imgv_head_login_github_dialog"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="30dp"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_github_200"
      />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/til_account_login_github_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_header_login_github_dialog"
      android:layout_marginTop="10dp"
      android:hint="account"
      android:orientation="horizontal"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      app:counterEnabled="true"
      app:errorEnabled="true"
      app:hintEnabled="true"
      >

    <EditText
        android:id="@+id/edt_account_login_github_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textColor="@color/white"
        />
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/tv_point_login_github_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/til_account_login_github_dialog"
      android:layout_marginBottom="20dp"
      android:layout_marginStart="30dp"
      android:text="@string/get_github_avatar_and_name"
      />

  <ProgressBar
      android:id="@+id/progressbar_login_github_dialog"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/tv_point_login_github_dialog"
      android:layout_margin="10dp"
      android:visibility="gone"
      />

  <TextView
      android:id="@+id/tv_login_login_github_dialog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/tv_point_login_github_dialog"
      android:layout_margin="10dp"
      android:text="登录"
      android:textSize="16sp"
      />
  <TextView
      android:id="@+id/tv_cancel_login_github_dialog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_point_login_github_dialog"
      android:layout_margin="10dp"
      android:layout_toStartOf="@+id/tv_login_login_github_dialog"
      android:text="取消"
      android:textSize="16sp"
      />

</RelativeLayout>